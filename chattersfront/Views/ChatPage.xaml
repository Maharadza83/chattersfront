<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="chattersfront.Views.ChatPage"
    Title="Czat">

    <VerticalStackLayout Padding="10" Spacing="10">
        <ScrollView>
            <VerticalStackLayout x:Name="MessagesList" Spacing="5" />
        </ScrollView>
        <HorizontalStackLayout Spacing="10">
            <Entry x:Name="MsgEntry" Placeholder="Wiadomość" HorizontalOptions="FillAndExpand" />
            <Button Text="Wyślij" Clicked="OnSendClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
