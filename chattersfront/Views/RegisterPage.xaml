<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="chattersfront.Views.RegisterPage"
    Title="Rejestracja">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry   x:Name="EmailEntry"    Placeholder="Email" />
        <Entry   x:Name="PasswordEntry" Placeholder="Hasło" IsPassword="True" />
        <Entry   x:Name="FullNameEntry" Placeholder="Imię i nazwisko" />
        <Button  Text="Zarejestruj"     Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
